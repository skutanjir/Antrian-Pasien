<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<StackPane alignment="CENTER" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.antrian.ui.controller.RegisterController">
   <children>
      <VBox spacing="20.0" alignment="CENTER" styleClass="form-container">
         <children>
            <Text text="Buat Akun Baru" styleClass="title-text" />
            
            <GridPane hgap="20" vgap="15">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="NIK" />
                  <TextField fx:id="nikField" promptText="NIK" GridPane.rowIndex="1" />

                  <Label text="Nama Lengkap" GridPane.columnIndex="1" />
                  <TextField fx:id="namaField" promptText="Nama Lengkap" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                  <Label text="Alamat" GridPane.rowIndex="2" />
                  <TextField fx:id="alamatField" promptText="Alamat" GridPane.rowIndex="3" />

                  <Label text="No Telepon" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="noTeleponField" promptText="No Telepon" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  
                  <Label text="Email" GridPane.rowIndex="4" />
                  <TextField fx:id="emailField" promptText="Email" GridPane.rowIndex="5" />

                  <Label text="Tanggal Lahir" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <DatePicker fx:id="tanggalLahirPicker" maxWidth="1.7976931348623157E308" promptText="dd/mm/yyyy" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  
                  <Label text="Password" GridPane.rowIndex="6" />
                  <PasswordField fx:id="passwordField" promptText="Password" GridPane.columnSpan="2" GridPane.rowIndex="7" />
               </children>
            </GridPane>
            
            <Button onAction="#handleDaftarButtonAction" text="Daftar" maxWidth="1.7976931348623157E308" />
            <Hyperlink onAction="#goToLogin" text="Sudah punya akun? Login" />
            <Label fx:id="errorLabel" textFill="#B00020" />
         </children>
      </VBox>
   </children>
</StackPane>