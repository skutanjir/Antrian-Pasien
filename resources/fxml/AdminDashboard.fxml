<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox spacing="15" style="-fx-padding: 20;" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.antrian.ui.controller.AdminDashboardController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10">
         <Label fx:id="welcomeLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
         <Region HBox.hgrow="ALWAYS" />
         <Button onAction="#handleResetAntrian" text="Reset Data" styleClass="reset-button" />
         <Button onAction="#handleLogout" text="Logout" />
      </HBox>
      <Text text="Dashboard Admin" styleClass="title-text" />
      <HBox spacing="10" alignment="CENTER_LEFT">
         <TextField fx:id="searchField" promptText="Cari Nama Pasien..." HBox.hgrow="ALWAYS" />
         <ComboBox fx:id="poliFilterComboBox" prefWidth="150.0" />
         <ComboBox fx:id="statusFilterComboBox" prefWidth="150.0" />
         <ComboBox fx:id="dateFilterComboBox" prefWidth="150.0" />
      </HBox>
      <ListView fx:id="antrianListView" VBox.vgrow="ALWAYS" />
   </children>
</VBox>