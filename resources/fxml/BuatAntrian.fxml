<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox spacing="20.0" style="-fx-padding: 30;" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.antrian.ui.controller.BuatAntrianController">
    <children>
        <Text text="Buat Antrian Baru" styleClass="title-text" />
        <GridPane hgap="10" vgap="15">
            <Label text="NIK Pasien" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="nikField" promptText="Masukkan NIK Pasien" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Nama Pasien" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            <TextField fx:id="namaField" promptText="Masukkan Nama Pasien" GridPane.columnIndex="3" GridPane.rowIndex="0" />
            <Label text="Alamat" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="alamatField" promptText="Masukkan Alamat Pasien" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="No Telepon" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <TextField fx:id="noTeleponField" promptText="Masukkan No Telepon Pasien" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            <Label text="Poli" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <ComboBox fx:id="poliComboBox" promptText="Pilih Poli" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints />
            <ColumnConstraints hgrow="ALWAYS" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
        <Label text="Keluhan" />
        <TextArea fx:id="keluhanArea" prefHeight="100.0" prefWidth="200.0" promptText="Tulis keluhan Anda di sini..." wrapText="true" />
        <HBox alignment="BOTTOM_RIGHT" spacing="10">
            <Button onAction="#handleAmbilAntrian" text="Ambil Antrian" />
        </HBox>
        <Label fx:id="infoNomorAntrian" style="-fx-font-weight: bold; -fx-text-fill: green;" />
    </children>
</VBox>
